<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>BMS</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- config listener load spring xml -->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath*:applicationContext.xml</param-value>
  </context-param>
  <listener>
    <display-name>contextConfigLocation</display-name>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <!-- filter -->
  <filter>
    <filter-name>BMSEncodingFilter</filter-name>
    <filter-class>com.bms.filter.BMSEncodingFilter</filter-class>
    <init-param>
        <param-name>encoding</param-name>
        <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>BMSContext</filter-name>
    <filter-class>com.bms.filter.BMSContextFilter</filter-class>
  </filter>
  <filter>
    <filter-name>BMSBookInfo</filter-name>
    <filter-class>com.bms.filter.BMSBookFilter</filter-class>
    <init-param>
        <param-name>allow</param-name>
        <param-value>,login,logout</param-value>
    </init-param>
  </filter>
  
  <filter-mapping>
    <filter-name>BMSEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>BMSContext</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>BMSBookInfo</filter-name>
    <url-pattern>/book/*</url-pattern>
  </filter-mapping>
  
  <!-- config SpringMVC -->
  <servlet>
    <servlet-name>springmvc</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
        <description>springmvc.xml</description>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:spring/spring-mvc.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>springmvc</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>